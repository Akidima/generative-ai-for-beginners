// Adopting the default GitHub codespaces-jupyter template as starter
// https://github.com/github/codespaces-jupyter
{
     "name": "Generative AI Course",
     "image": "mcr.microsoft.com/devcontainers/python:3.11-bullseye",
     
     "features": {
       "ghcr.io/devcontainers/features/node:1": "18",
       "ghcr.io/devcontainers/features/python:1": "3.11"
     },
     
     "postCreateCommand": "pip install --no-cache-dir -r requirements.txt",
     
     "customizations": {
       "vscode": {
         "extensions": [
           "ms-python.python",
           "ms-toolsai.jupyter",
           "github.copilot"
         ]
       }
     },
     
     "forwardPorts": [8000, 8080]
   }